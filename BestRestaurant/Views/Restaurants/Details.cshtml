@{
  Layout = "_Layout";
}

@using BestRestaurant.Models
@model BestRestaurant.Models.Restaurant

<h1>Restaurant Details</h1>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.Reviews.Count == 0)
{
  <p>No reviews found for this restaurant.</p>
}

<button>@Html.ActionLink("Add a Review", "Create", "Reviews", new { id = Model.RestaurantId })</button>

@foreach (Review review in @Model.Reviews)
{
  <div class="review-item" id="review-@review.ReviewId">
    <p class="review-header">@review.Author, on @review.Timestamp:</p>
    <p class="review-body">@review.Comment</p>
  </div>
}

<p>@Html.ActionLink("Edit Restaurant", "Edit", new { id = Model.RestaurantId })</p>
<p>@Html.ActionLink("Delete Restaurant", "Delete", new { id = Model.RestaurantId })</p>
<p>@Html.ActionLink("Back to Restaurant list", "Index")</p>
<p>@Html.ActionLink("Back to Cuisine List", "Details", "Cuisines", new { id = Model.CuisineId })</p>